<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:Homework6"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    x:Class="Homework6.Homework6Page">

    <!--ScrollView-->
        <StackLayout Padding="10">
            <Label Text="Pick a person to see where they live" FontSize="Large"/>
            <Picker
                x:Name="PickerPerson"
                Title="Directory" 
                ItemDisplayBinding="{Binding firstName}"
                SelectedIndexChanged="Handle_SelectedIndexChanged"/>
            <maps:Map x:Name="MyMap"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                WidthRequest="320"
                HeightRequest="300"
                IsShowingUser="true"
                MapType="Satellite"/>
            <Picker
                x:Name="PickerMapType"
                Title="Map Type" 
                PropertyChanged="Handle_PropertyChanged">
                <Picker.Items>
                    <x:String>Satellite</x:String>
                    <x:String>Street</x:String>
                    <x:String>Hybrid</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    <!--/ScrollView-->
</ContentPage>